@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal;

<h4>Add a new Animal</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required="required" })
  <br>
  @Html.LabelFor(model => model.Gender)
  @Html.RadioButtonFor(model => model.Gender, true)<span>Male</span>
  @Html.RadioButtonFor(model => model.Gender, false)<span>Female</span>
  <br>
  @Html.LabelFor(model => model.Species)
  @Html.TextBoxFor(model => model.Species, new { required="required" })
  <br>
  @Html.LabelFor(model => model.ColorPattern)
  @Html.TextBoxFor(model => model.ColorPattern, new { required="required" })
  <br>
  @Html.LabelFor(model => model.Birthday)
  @Html.EditorFor(model => model.Birthday, new { @type = "date" })
  <br>
  @Html.LabelFor(model => model.Admitted)
  @Html.EditorFor(model => model.Admitted, new { @type = "date" })
  <br>

  <input type="submit" value="Add New Animal" />
}
<p>@Html.ActionLink("Show All Animals", "Index")</p>