@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h2>Animal Details</h2>
<br>
<br>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@if(Model.Gender == true)
{
  <h3>Gender: Male</h3>
}
else
{
  <h3>Gender: Female</h3>
}
<h3>Species: @Html.DisplayFor(model => model.Species)</h3>
<h3>Color/Pattern: @Html.DisplayFor(model => model.ColorPattern)</h3>
<h3>Birthday: @Html.DisplayFor(model => model.Birthday)</h3>
<h3>Date Admitted: @Html.DisplayFor(model => model.Admitted)</h3>

<p>@Html.ActionLink("Back to List", "Index")</p>